<div class="depot_form">
  <%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <fieldset>
    <legend>Введите сведения о пользователе</legend>
    <div class="field">
      <%= f.label "Имя" %><br>
      <%= f.text_field :name %>
    </div>
    <% if params[:action] == 'edit' || params[:action] == 'update' %>
    <div class="field">
      <%= f.label :old_pass, "Старый пароль" %><br>
      <%= f.password_field :old_pass %>
    </div>
    <% end %>
    <div class="field">
      <%= f.label :password, "Пароль" %><br>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Еще раз" %><br>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>
  <% end %>
</div>